{
  "manifest_version": 3,
  "name": "Degree Works Scanner",
  "version": "1.0.0",
  "description": "Scan your Degree Works page and generate a JSON file of your academic progress.",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}